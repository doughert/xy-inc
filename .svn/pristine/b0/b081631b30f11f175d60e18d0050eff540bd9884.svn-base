package br.org.iamar.firebase.model;

import java.util.HashMap;
import java.util.Map;

public class Class {

	private String name;
	private Map<String, String> peoples;
	private Map<String, String> projects;

	public Class() {
	}

	public Class(String name) {
		this.name = name;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public Map<String, String> getPeoples() {
		return peoples;
	}

	public void setPeoples(Map<String, String> peoples) {
		this.peoples = peoples;
	}

	public Map<String, String> getProjects() {
		return projects;
	}

	public void setProjects(Map<String, String> projects) {
		this.projects = projects;
	}
	
	public void addPeople(String key, String name) {
		if (peoples == null) {
			peoples = new HashMap<String, String>();
		}

		peoples.put(key, name);
	}

	@Override
	public String toString() {
		return "Class [name=" + name + ", peoples=" + peoples + ", projects=" + projects + "]";
	}

}
