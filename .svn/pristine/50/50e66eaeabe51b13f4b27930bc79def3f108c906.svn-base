package br.org.iamar.sgci.controller;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import br.org.iamar.sgci.model.Profile;
import br.org.iamar.sgci.service.ViewPostService;


@RestController
@RequestMapping( value = "/view-post" )
public class ViewPostController {

    @Autowired
    private ViewPostService viewPostService;


    @GetMapping( "/profile-viewer/{profileViewerId}" )
    public Iterable< Profile > findProfilePostersByProfileViewerId( @PathVariable( "profileViewerId" ) Long profileViewerId ) {

        return viewPostService.findProfilePostersByProfileViewerId( profileViewerId );
    }


    @PostMapping( "/profileViewer/{profileViewerId}" )
    public void save( @PathVariable( "profileViewerId" ) Long profileViewerId, @RequestBody Iterable< Profile > selectedProfies ) {

        Profile profile = new Profile();
        profile.setId( profileViewerId );

        viewPostService.save( profile, selectedProfies );
    }

}
