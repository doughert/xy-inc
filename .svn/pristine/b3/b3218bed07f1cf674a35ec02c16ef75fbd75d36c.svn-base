package br.org.iamar.firebase.model;

import java.util.HashMap;
import java.util.Map;

public class Class {

	private String name;
	private Map<String, String> students;
	private Map<String, String> projects;

	public Class() {
	}

	public Class(String name) {
		this.name = name;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public Map<String, String> getStudents() {
		return students;
	}

	public void setStudents(Map<String, String> students) {
		this.students = students;
	}

	public Map<String, String> getProjects() {
		return projects;
	}

	public void setProjects(Map<String, String> projects) {
		this.projects = projects;
	}
	
	public void addStudent(String key, String name) {
		if (students == null) {
			students = new HashMap<String, String>();
		}

		students.put(key, name);
	}

	@Override
	public String toString() {
		return "Class [name=" + name + ", students=" + students + ", projects=" + projects + "]";
	}

}
